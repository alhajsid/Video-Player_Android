<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:weightSum="100"
        android:id="@+id/mainlayoutnot"
        android:orientation="horizontal"
        android:background="#fff">

    <TextView
            android:background="@drawable/playingsongback"
            android:layout_width="170dp"
            android:layout_weight="30"
            android:maxLines="2"
            android:focusable="false"
            android:clickable="false"
            android:layout_height="40dp"
            android:id="@+id/textViewplaingsongnot"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="47dp"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintVertical_bias="0.47"
            android:textColor="@color/colorAccent"
            android:text="Suno na sang mar mar"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12sp"/>

    <ImageView
            android:layout_width="50dp"
            android:src="@drawable/backaj"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:id="@+id/imageButtonbacksongnot"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="8dp"/>

    <LinearLayout android:layout_width="40dp"
                  android:id="@+id/plaupausebuttonnot"
                  android:layout_height="40dp"
                  android:layout_weight="15"
                  android:background="@drawable/smallbackbuton"
                  android:gravity="center">
        <ImageView
                android:layout_width="15dp"
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/mplaypause"
                android:src="@mipmap/play"
                android:layout_height="15dp"/>
    </LinearLayout>

    <ImageView
            android:layout_width="50dp"
            android:src="@drawable/nrextaj"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:id="@+id/imageButtonnexsongnot"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_height="20dp" android:id="@+id/crossnot"/>

</LinearLayout>
