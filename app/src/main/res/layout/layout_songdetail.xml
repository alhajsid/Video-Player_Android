<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/alhah"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="50dp">
            <LinearLayout android:layout_width="20dp"
                          android:layout_marginLeft="10dp"
                          android:layout_weight="2"
                          android:gravity="center"
                          android:id="@+id/buttonbackdeatil"
                          android:background="@drawable/backbuttton"
                          android:layout_height="30dp">
                <ImageView
                        android:background="@mipmap/mbackaj"
                        android:layout_width="10dp"
                        android:layout_height="15dp"/>

            </LinearLayout>
            <TextView
                    android:layout_width="0dp"
                    android:text="Now playing"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#CFD9E9"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:layout_weight="94"
            />
            <TextView android:layout_width="13dp"
                      android:layout_weight="2"
                      android:layout_marginRight="15dp"
                      android:background="@mipmap/threedots"
                      android:layout_height="6dp"/>


        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:gravity="center_horizontal"
                android:background="@drawable/songdetailshadow"
                android:orientation="vertical"
                android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:gravity="center_horizontal|bottom"
                android:id="@+id/imageView"
        >
            <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    app:cardCornerRadius="50dp"
                    android:layout_height="160dp">
                <ImageView android:layout_width="160dp"
                           android:src="@mipmap/defaultpic"
                           android:scaleType="fitXY"
                           android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
            <TextView
                    android:text="TextView"
                    android:gravity="center"
                    android:layout_weight="20"
                    android:layout_width="300dp"
                    android:layout_height="0dp"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:id="@+id/textViewsongnamefullscreen"
                    android:textColor="#3D3D3D"
                    android:textSize="18sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="10"
                    android:layout_height="0dp">

                <SeekBar
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_height="20dp"
                        android:id="@+id/seekBarprogress"
                />
                <LinearLayout android:layout_width="match_parent" android:layout_height="40dp">

                    <TextView
                            android:text="00:00"
                            android:textColor="#9E9E9E"
                            android:layout_weight="15"
                            android:layout_marginLeft="15dp"
                            android:textSize="12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewcurrensongime" tools:ignore="NestedWeights"/>
                    <TextView
                            android:text="00:00"
                            android:layout_weight="15"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:gravity="right"
                            android:layout_marginRight="15dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewmaxsongime"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:layout_height="0dp">


                <ImageView
                        android:layout_width="65dp"
                        android:gravity="center"
                        android:id="@+id/buttonbackskip"
                        android:background="@mipmap/back"
                        android:layout_height="65dp">

                </ImageView>
            <LinearLayout
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:id="@+id/buttonpaypau"
                    android:background="@drawable/playpauseback"
                    android:layout_height="60dp">
                <Button
                        android:background="@mipmap/play"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/buttonplapause"
                        tools:ignore="ButtonStyle"/>
            </LinearLayout>
                <ImageView
                        android:layout_width="65dp"
                        android:gravity="center"
                        android:id="@+id/buttonnexskip"
                        android:background="@mipmap/nrext"
                        android:layout_height="65dp">

                </ImageView>
        </LinearLayout>


        </LinearLayout>
</LinearLayout>